{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A simple React boilerplate",
  "main": "index.js",
  "author": "Chris Burbank",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rimraf dist && yarn webpack --progress --colors --display-error-details --config webpack/common.config.js",
    "build:production": "NODE_ENV=production yarn build",
    "ci": "yarn lint && yarn flow check",
    "lint": "eslint src",
    "start": "webpack-dev-server --mode development --hot --open --config webpack/common.config.js",
    "test": "jest"
  },
  "dependencies": {
    "@babel/polyfill": "7.0.0",
    "offline-plugin": "^5.0.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.5",
    "styled-components": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-optional-chaining": "7.0.0",
    "@babel/plugin-transform-flow-strip-types": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@hot-loader/react-dom": "16.7.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-flow-react-proptypes": "^24.1.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.8.0",
    "compression-webpack-plugin": "^2.0.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-babel-module": "5.0.0-beta.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.83.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-plugin-context": "^2.9.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.4"
  },
  "jest": {
    "setupFiles": [
      "./spec/specHelper.js",
      "jest-plugin-context/setup"
    ]
  }
}
